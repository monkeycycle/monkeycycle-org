{
    "name": "monkeycycle",
    "version": "1.0.0",
    "author": "Michael Pereira <hello@monkeycycle.org>",
    "description": "Personal website",
    "homepage": "https://monkeycycle.org",
    "engineStrict": true,
    "engines": {
        "node": ">=12.6.0"
    },
    "private": true,
    "dependencies": {
        "autoprefixer": "^6.7.2",
        "glider": "^0.1.0",
        "handlebars": "^4.0.11",
        "helper-date": "^0.2.3",
        "image-batch-resizer": "^0.8.1",
        "imagemin": "^5.3.1",
        "imagemin-cli": "^5.0.0",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-webp": "^5.1.0",
        "lory.js": "^2.5.3",
        "metalsmith": "^2.3.0",
        "metalsmith-data": "^0.1.2",
        "metalsmith-drafts": "^0.1.0",
        "metalsmith-html-minifier": "^2.4.5",
        "metalsmith-in-place": "^1.0.0",
        "metalsmith-layouts": "^1.8.0",
        "metalsmith-markdown": "^1.2.0",
        "metalsmith-permalinks": "^2.2.0",
        "metalsmith-register-helpers": "^0.3.0",
        "postcss": "^5.2.18",
        "postcss-at-rules-variables": "^0.0.27",
        "postcss-calc": "^5.3.1",
        "postcss-cli": "^2.6.0",
        "postcss-csso": "^1.1.2",
        "postcss-custom-media": "^5.0.1",
        "postcss-custom-properties": "^5.0.2",
        "postcss-each": "^0.9.3",
        "postcss-for": "^2.1.1",
        "postcss-import": "^9.1.0",
        "postcss-nesting": "^2.3.1",
        "semver": "^6.3.0",
        "svgo": "^1.3.0"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "onchange": "^6.0.0"
    },
    "scripts": {
        "clean": "rm -rf build",
        "site": "metalsmith",
        "assets.copy": "cp -R src/assets/ build/assets/",
        "assets.css": "postcss --config postcss.json",

        "assets.media.resize": "run-p resize.sm resize.md resize.lg resize.xl",
        "resize.sm": "image-batch-resizer -d ./build/assets/media -s 480 --prefix 'sm_'",
        "resize.md": "image-batch-resizer -d ./build/assets/media -s 840 --prefix 'md_'",
        "resize.lg": "image-batch-resizer -d ./build/assets/media -s 960 --prefix 'lg_'",
        "resize.xl": "image-batch-resizer -d ./build/assets/media -s 1024 --prefix 'xl_'",

        "assets.media.minify": "run- images.minify media.minify",
        "images.minify": "run-p images.webp images.jpeg images.png",
        "images.webp": "imagemin build/assets/img/* --plugin=webp --out-dir=build/assets/img/",
        "images.jpeg": "imagemin build/assets/img/*.jpg --plugin=mozjpeg --out-dir=build/assets/img/",
        "images.png": "imagemin build/assets/img/*.png --out-dir=build/assets/img/",
        "media.minify": "run-p media.webp media.jpeg media.png",
        "media.webp": "imagemin build/assets/media/* --plugin=webp --out-dir=build/assets/media/",
        "media.jpeg": "imagemin build/assets/media/*.jpg --plugin=mozjpeg --out-dir=build/assets/media/",
        "media.png": "imagemin build/assets/media/*.png --out-dir=build/assets/media/",

        "assets": "run-s assets.copy assets.css",
        "assets.media.process": "run-s assets.media.resize assets.media.minify",
        "build": "run-s clean site assets",
        "serve": "http-server './build/' ",
        "watch.css": "onchange src/assets/css/**/* -- npm run assets.copy && npm run assets.css",
        "dev": "run-s build serve watch.css",
        "start": "run-p build serve"
    }

}
