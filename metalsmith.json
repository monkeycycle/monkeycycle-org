{
    "source": "src/pages/",
    "destination": "build/",
    "clean": false,
    "plugins": {
        "metalsmith-data": {
            "site": "src/data/site.yml",
            "links": "src/data/links.yml",
            "projects": "src/data/projects.yml"
        },
        "metalsmith-markdown": {
            "pedantic": false,
            "gfm": true,
            "tables": true,
            "breaks": false,
            "sanitize": false,
            "smartLists": true,
            "smartypants": false,
            "xhtml": false
        },
        "metalsmith-permalinks": {
            "pattern": ":url"
        },
        "metalsmith-register-helpers": {
            "directory": "src/helpers/"
        },
        "metalsmith-layouts": {
            "engine": "handlebars",
            "directory": "src/layouts/",
            "partials": "src/partials/",
            "rename": true
        },
        "metalsmith-in-place": {
            "engine": "handlebars"
        }
    }
}
